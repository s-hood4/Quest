<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:paddingRight">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="custom_toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextColor">#ffffff</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="background">
        <item name="android:background">@color/colorWhite</item>
    </style>

    <style name="product_detail_line_separator">
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/colorLightGray</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">@dimen/product_margin</item>
        <item name="android:layout_marginRight">@dimen/product_margin</item>
    </style>

    <style name="loginEditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorGray</item>
    </style>

    <style name="loginHelperText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="loginButton">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="signupEditText">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:backgroundTint">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorLightGray3</item>
    </style>

    <style name="signupButton">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="loginLinearLayout">
        <item name="android:background">#00000000</item>
    </style>

    <style name="signupLinearLayout">
        <item name="android:background">#00000000</item>
        <item name="android:layout_margin">15dp</item>
    </style>

    <style name="login">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@color/colorRed</item>
    </style>

    <style name="facebookText">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@color/colorBlue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="facebookView">
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_margin">5dp</item>
    </style>


    <style name="Dialog.FullScreen" parent="Theme.AppCompat.Dialog">
        <item name="android:padding">0dp</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ratingBar" parent="Theme.AppCompat">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorLightGray3</item>
    </style>

    <!-- =============================================================== -->
    <!-- Material-Light styles -->
    <!-- =============================================================== -->

    <style name="page_background_wh">
        <item name="android:background">?android:colorBackground</item>
    </style>

    <style name="cv_background_wh" parent="CardView">
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="appbar_background_wh">
        <item name="android:background">@color/white</item>
    </style>

    <style name="cat_background_wh">
        <item name="android:background">#efefef</item>
    </style>

    <style name="feed_background_wh">
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="divider_wh">
        <item name="android:background">@color/colorLightGray</item>
    </style>

    <style name="feed_divider_wh">
        <item name="android:background">@color/colorLightGray4</item>
    </style>

    <style name="nav_background_wh" parent="Widget.Design.NavigationView">
        <item name="itemTextColor">@color/colorGray</item>
        <item name="android:background">?android:colorBackground</item>
    </style>

    <style name="text_subheader_wh">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_large_wh">
        <item name="android:textColor">@android:color/background_dark</item>
    </style>

    <style name="text_regular_wh">
        <item name="android:textColor">@color/colorGray</item>
    </style>

    <style name="button_wh" parent="text_large_wh">
        <item name="android:background">@color/white</item>
    </style>

    <style name="horizontal_line_wh">
        <item name="android:background">#00000000</item>
    </style>

    <style name="price_wh">
        <item name="android:textColor">@color/colorRed</item>
    </style>

    <!-- =============================================================== -->
    <!-- Customize YOUR_CUSTOM_THEME Styles -->
    <!-- Define your own styles below. -->
    <!-- =============================================================== -->

    <style name="page_background_nm">
        <item name="android:background">#404040</item>
    </style>

    <style name="cv_background_nm" parent="CardView">
        <item name="cardBackgroundColor">#303030</item>
    </style>

    <style name="appbar_background_nm">
        <item name="android:background">#404040</item>
    </style>

    <style name="cat_background_nm">
        <item name="android:background">#404040</item>
    </style>

    <style name="feed_background_nm">
        <item name="android:background">#404040</item>
    </style>

    <style name="divider_nm">
        <item name="android:background">#505050</item>
    </style>

    <style name="feed_divider_nm">
        <item name="android:background">#505050</item>
    </style>

    <style name="nav_background_nm" parent="Widget.Design.NavigationView">
        <item name="itemTextColor">#FAFAFA</item>
        <item name="android:background">#404040</item>
        <item name="itemIconTint">#FAFAFA</item>
    </style>

    <style name="text_subheader_nm">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_large_nm">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_regular_nm">
        <item name="android:textColor">#D0D0D0</item>
    </style>

    <style name="button_nm" parent="text_large_nm">
        <item name="android:background">@color/white</item>
    </style>

    <style name="horizontal_line_nm">
        <item name="android:background">#ffffffff</item>
    </style>

    <style name="price_nm">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
