<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="?cvBackground"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/category_item_margin"
    app:cardCornerRadius="4dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_category"
            android:layout_alignParentTop="true"
            android:layout_width="@dimen/category_item_iv_width"
            android:layout_height="@dimen/category_item_iv_height"
            android:scaleType="centerCrop"
            tools:src="@drawable/quest"/>

        <com.codepath.project.android.views.QuestTextView
            android:id="@+id/tv_category_name"
            style="?textSubheader"
            android:layout_width="@dimen/category_item_iv_width"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_category"
            android:fontFamily="sans-serif-light"
            android:gravity="left"
            android:paddingBottom="@dimen/category_item_tv_padding"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="@dimen/category_item_tv_padding"
            android:textSize="@dimen/category_item_tv_size"
            android:textStyle="bold"
            tools:text="Television"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>