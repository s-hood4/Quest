<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_category"
        android:layout_width="60dp"
        android:scaleType="centerCrop"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:layout_height="60dp"
        android:contentDescription="@string/product_image" />

    <com.codepath.project.android.views.QuestTextView
        android:id="@+id/tv_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/iv_category"
        android:layout_centerVertical="true"
        android:background="@color/rv_home_category_tv_bg"
        android:paddingTop = "@dimen/category_item_tv_padding"
        android:paddingBottom = "@dimen/category_item_tv_padding"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-light"
        android:textSize="15sp" />
</RelativeLayout>