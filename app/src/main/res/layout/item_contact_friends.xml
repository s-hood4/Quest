<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    style="?cvBackground"
    app:cardCornerRadius="5dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivFriendProfile"
            android:transitionName="ivProfile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/contact_friend"
            tools:src="@drawable/quest" />

        <com.codepath.project.android.views.QuestTextView
            android:id="@+id/tvFriendName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivFriendProfile"
            android:layout_centerHorizontal="true"
            style="?textSubheader"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"/>

        <ImageView
            android:id="@+id/ivMessenger"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@+id/tvFriendName"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="15dp"
            android:alpha="0.2"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_facebook_messenger" />

        <ImageView
            android:id="@+id/ivGmail"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@+id/tvFriendName"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_gmail" />

    </RelativeLayout>
</android.support.v7.widget.CardView>